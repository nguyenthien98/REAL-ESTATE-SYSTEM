<body>
    <div class="left-sidebar-pro">
        <nav id="sidebar" class="">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "Home")"><img class="main-logo" src="~/Images/Censor/logo/logo.png" alt="" /></a>
                <strong><a href="index.html"><img src="~/Images/Censor/logo/logosn.png" alt="" /></a></strong>
            </div>
            <div class="left-custom-menu-adp-wrap comment-scrollbar">
                <nav class="sidebar-nav left-sidebar-menu-pro">
                    <ul class="metismenu" id="menu1">
                        <li>
                            <a title="Landing Page" href="@Url.Action("Index", "Home")" aria-expanded="false"><span class="educate-icon educate-event icon-wrap sub-icon-mg" aria-hidden="true"></span> <span class="mini-click-non">Dashboard</span></a>
                        </li>
                        <li class="active">
                            <a class="has-arrow" href="@Url.Action("Index", "Post")" aria-expanded="false"><span class="educate-icon educate-course icon-wrap"></span> <span class="mini-click-non">Posts</span></a>
                            <ul class="submenu-angle" aria-expanded="false">
                                <li><a title="All Posts" href="@Url.Action("Index", "Post")"><span class="mini-sub-pro">All Posts</span></a></li>
                                <li><a title="Pending Posts" href="@Url.Action("PendingPost", "Post")"><span class="mini-sub-pro">Pending Post</span></a></li>
                                <li><a title="Reported Posts" href="@Url.Action("ReportPost", "Post")"><span class="mini-sub-pro">Reported Posts</span></a></li>
                                <li><a title="Add Post" href="@Url.Action("AddPost", "Post")"><span class="mini-sub-pro">Add Post</span></a></li>
                            </ul>
                        </li>
                        <li class="active">
                            <a class="has-arrow" href="@Url.Action("Index", "Customer")" aria-expanded="false"><span class="educate-icon educate-professor icon-wrap"></span> <span class="mini-click-non">Customers</span></a>
                            <ul class="submenu-angle" aria-expanded="false">
                                <li><a title="All Customers" href="@Url.Action("Index", "Customer")"><span class="mini-sub-pro">All Customers</span></a></li>
                                <li><a title="Reported Customers" href="@Url.Action("ReportedCustomers", "Customer")"><span class="mini-sub-pro">Reported Customers</span></a></li>
                                <li><a title="Add Customer" href="@Url.Action("AddCustomer", "Customer")"><span class="mini-sub-pro">Add Customer</span></a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </nav>
    </div>
    <!-- End Left menu area -->
    <!-- Start Welcome area -->
    <div class="all-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="logo-pro">
                        <a href="index.html"><img class="main-logo" src="~/Images/Censor/logo/logo.png" alt="" /></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-advance-area">
            <div class="header-top-area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="header-top-wraper">
                                <div class="row">
                                    <div class="col-lg-1 col-md-0 col-sm-1 col-xs-12">
                                        <div class="menu-switcher-pro">
                                            <button type="button" id="sidebarCollapse" class="btn bar-button-pro header-drl-controller-btn btn-info navbar-btn">
                                                <i class="educate-icon educate-nav"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-7 col-sm-6 col-xs-12">
                                        <div class="header-top-menu tabl-d-n">
                                        </div>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                        <div class="header-right-info">
                                            <ul class="nav navbar-nav mai-top-nav header-right-menu">
                                                <li class="nav-item">
                                                    <a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="nav-link dropdown-toggle">
                                                        @{
                                                            Employee emp = Session["Account_Censor"] as Employee;
                                                            if (emp == null)
                                                            {
                                                                emp = new Employee();
                                                                emp.FullName = "";
                                                                emp.Avatar_URL = "";
                                                            }

                                                        }
                                                        <img src="@(Constants.EMP_IMG_URL.ToString() + emp.Avatar_URL.ToString())" alt="" />

                                                        <span class="admin-name">@emp.FullName.ToString()</span>
                                                        <i class="fa fa-angle-down edu-icon edu-down-arrow"></i>
                                                    </a>
                                                    <ul role="menu" class="dropdown-header-top author-log dropdown-menu animated zoomIn">
                                                        <li>
                                                            <a href="#"><span class="edu-icon edu-home-admin author-log-ic"></span>My Account</a>
                                                        </li>
                                                        <li>
                                                            <a href="#"><span class="edu-icon edu-user-rounded author-log-ic"></span>My Profile</a>
                                                        </li>
                                                        @*<li>
                                                                <a href="#"><span class="edu-icon edu-money author-log-ic"></span>User Billing</a>
                                                            </li>
                                                            <li>
                                                                <a href="#"><span class="edu-icon edu-settings author-log-ic"></span>Settings</a>
                                                            </li>*@
                                                        <li>
                                                            @Html.ActionLink("Log Out", "Logout", "Account", null, htmlAttributes: new { @style = "padding-left: 30px" })
                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Mobile Menu start -->
            <div class="mobile-menu-area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="mobile-menu">
                                <nav id="dropdown">
                                    <ul class="mobile-menu-nav">
                                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                                        <li>
                                            <a data-toggle="collapse" data-target="#demoevent" href="#">Posts <span class="admin-project-icon edu-icon edu-down-arrow"></span></a>
                                            <ul id="demoevent" class="collapse dropdown-header-top">
                                                <li>
                                                    @Html.ActionLink("All Posts", "Index", "Post")
