                                                </li>
                                                <li>
                                                    @Html.ActionLink("Reported Customers", "ReportedCustomers", "Customer")
                                                </li>
                                                <li>
                                                    @Html.ActionLink("Add Customer", "AddCustomer", "Customer")
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Mobile Menu end -->
            @RenderBody()
        </div>
