@model RealEstateWebsite.Models.Customer

<link href="~/Content/Censor/slideshow.css" rel="stylesheet" />
<link href="~/Content/Censor/notifications/Lobibox.min.css" rel="stylesheet" />
<link href="~/Content/Censor/notifications/notifications.css" rel="stylesheet" />


<script src="~/Scripts/Censor/notifications/notification-active.js"></script>
<script src="~/Scripts/Censor/notifications/Lobibox.js"></script>
<script src="~/Scripts/Censor/slideshow.js"></script>



<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <ul id="myTabedu1" class="tab-review-design">
                        <li class="active"><a href="#description">Edit Customer</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">
                                            @using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "dropzone dropzone-custom needsclick add-professors dz-clickable", @id = "demo1-upload", @novalidate = "novalidate" }))
                                            {
                                                @Html.EditorFor(model => model.Customer_ID, new { htmlAttributes = new { @style = "display: none" } })
                                                <div class="form-group">
                                                    <b>First Name:</b>
                                                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    <b>Last Name:</b>
                                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    <b>Phone Number:</b>
                                                    <input type="text" name="phonenumber" class="form-control" value="@Model.PhoneNumbers.LastOrDefault().PhoneNumber1" />
                                                </div>

                                                <div class="form-group">
                                                    <b>Email:</b>
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    <b>Address:</b>
                                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-custon-rounded-four btn-primary" data-toggle="modal">Save</button>
                                                    <button type="button" data-dismiss="modal" class="btn btn-custon-rounded-four btn-default">Cancel</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



