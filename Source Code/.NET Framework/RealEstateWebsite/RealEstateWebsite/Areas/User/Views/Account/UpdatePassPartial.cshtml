<body class="login-img3-body">
    <div class="container">
        <form class="login-form abc" method="post">
            <div class="login-wrap">
                <p class="login-img"><i class="fas fa-lock"></i></p>
                <div style="text-align:center;color:red">@ViewBag.ThongBao</div>
                <div class="input-group">
                    <label class="input-group-addon" for="Current password"><i class="fas fa-key"></i></label>
                    <input type="text" class="form-control" placeholder="Current password" name="passwordC" autofocus>
                </div>
                <div class="input-group">
                    <label class="input-group-addon" for="New password"><i class="fas fa-key"></i></label>
                    <input type="text" class="form-control" name="passwordM" placeholder="New password">
                </div>
                <div class="input-group">
                    <label class="input-group-addon" for="Confirm password"><i class="fas fa-key"></i></label>
                    <input type="text" class="form-control" name="passwordL" placeholder="Confirm Password">
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm</button>
            </div>
            <div class="combackhome" style="padding-left:33%">
                @Html.ActionLink("Comback Home", "Index", "Home")
            </div>
        </form>
        <div class="text-right">
