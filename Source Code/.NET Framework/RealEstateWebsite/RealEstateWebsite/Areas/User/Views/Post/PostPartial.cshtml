@using RealEstateWebsite.Models;
@model List<Post>
@{
    Layout = null;
}
<div class="section-title text-center">
    <h3 style="font-size:185%">POST FOR YOU</h3>
</div>

<div class="row" style="display:contents">
    <div>
        <h2>@ViewBag.ThongBao</h2>
    </div>
    @{ foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="feature-item">
                    <div class="feature-pic set-bg" data-setbg="@(Constants.POST_IMG_URL_USER.ToString() + item.Post_Image.FirstOrDefault().url.ToString())"></div>
                    <div class="feature-text">
                        <div class="text-center feature-title">
                            <a href="@Url.Action("ReadmorePartial", "Post", new { @Post_id = item.Post_ID })"><p>@item.Tittle</p></a>
                        </div>
                        <div class="room-info-warp">
                            <div class="room-info">
                                <div class="">
                                    <p style="text-align:center"><i class="fas fa-map-marker-alt"></i>@item.Location</p>
                                </div>
                            </div>
                            <div class="room-info1">
                                <div class="rf-left">
                                    <p><i class="fas fa-chart-area"></i>@item.Area m²</p>
                                </div>
                                <div class="rf-right">
                                    <p><i class="far fa-clock"></i>@item.PostTime</p>
                                </div>
                            </div>
                        </div>
                        <a href="@Url.Action("ReadmorePartial", "Post", new { @Post_id = item.Post_ID })" class="room-price">@string.Format("{0:0,0 VND}", item.Price)</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
