@using RealEstateWebsite.Models
@model List<Post>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
</head>
<body>
    <div class="col-md-6 plat">
        <div id="myCarousel1" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="hover">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel1" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel1" data-slide-to="1"></li>
                <li data-target="#myCarousel1" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                @{ foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="serv-w3ls1">
                                <img src="@(Constants.POST_IMG_URL_USER.ToString() + item.Post_Image.FirstOrDefault().url.ToString())" alt="w3ls" class="img-responsive">
                                <span class="four">@string.Format("{0:0,0 VND}", item.Price)</span>
                                <div class="rent-bottom">
                                    <a href="@Url.Action("ReadmorePartial", "Post", new { @Post_id = item.Post_ID })"><h6 style="text-align:center">@item.Location</h6></a>
                                    <div style="text-align:center" class="rent-icons">
                                        <h5 style="text-align:center" class="area">@item.Area m²</h5>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</body>
</html>