@model RealEstateWebsite.Areas.User.Models.CustomerPost

@{
    ViewBag.Title = "PostCustomer";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="Post1" style="padding-top:5%;padding-bottom:5%">
        @using (Html.BeginForm("PostCustomer", "CustomerPost", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h1 style="text-align:center;color:red">@ViewBag.ThongBao1</h1>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="rowHeader">
                    <h2 style="padding-top:1%;padding-bottom:1%;text-align:center">Information basic</h2>
                </div>
                <div class="rowContent" style="margin-bottom:5%">
                    <div class="row" style="padding-top:2%">
                        <div class="col-lg-6" style="padding-left:5%">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PostType, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-top:1%;padding-left:18%">
                                    @Html.DropDownList("PostType")
                                    @Html.ValidationMessageFor(model => model.PostType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RealEstaleType, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:18%;padding-top:1%">
                                    @Html.DropDownList("RealEstaleType")
                                    @Html.ValidationMessageFor(model => model.RealEstaleType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Tittle, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:18%">
                                    @Html.TextBoxFor(model => model.Tittle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Tittle, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:18%">
                                    @Html.TextBoxFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:18%">
                                    @Html.TextBoxFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:12%">
                                    @Html.TextBoxFor(model => model.Area, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:12%;padding-top:1%">
                                    @* @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })*@
                                    @* Name = tên thuộc tính bên controller*@
                                    <input type="file" name="fileUpload" />
                                    @ViewBag.ThongBao
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10" style="padding-left:12%;font-size:120%">
                                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="rowHeader">
                    <h2 style="padding-top:1%;padding-bottom:1%;text-align:center">Information project</h2>
                </div>
                <div class="rowContent" style="margin-bottom:5%">
                    <div class="row" style="padding-top:2%;padding-bottom:2%;padding-left:5%">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Protential, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Protential, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Protential, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.LocationProject, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.LocationProject, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LocationProject, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.url1, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10" style="padding-top:0.5%">
                                @* @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })*@
                                @* Name = tên thuộc tính bên controller*@
                                <input type="file" name="fileUpload" />
                                @ViewBag.ThongBao
                            </div>
                        </div>
                    </div>
                </div>

                <div class="rowHeader">
                    <h2 style="padding-top:1%;padding-bottom:1%;text-align:center">Information other</h2>
                </div>
                <div class="rowContent">
                    <div class="row" style="padding-top:2%;padding-bottom:2%;padding-left:5%">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Floor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Floor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Floor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Bedroom, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Bedroom, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Bedroom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Bathroom, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Bathroom, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Bathroom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Direction, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("Direction")
                                @Html.ValidationMessageFor(model => model.Direction, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Post" class="btn btn-default btncreatpost" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>