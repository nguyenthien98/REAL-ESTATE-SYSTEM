@model RealEstateWebsite.Models.Employee

@{
    ViewBag.Title = "Edit Employee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit Employee</h2>
<div class="row">
    <div class="col-lg-12">
        @*<h3 class="page-header">
            <i class="fa fa-laptop"></i> Search Employees
        </h3>*@
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Admin/Home/Index">Home</a>
            </li>
            <li>
                @Html.ActionLink("View Employees", "ViewEmp", "Adminstrator")
            </li>
            <li>
                <i class="fa fa-laptop"></i>Edit Employee
            </li>
        </ol>


    </div>

</div>
@using (Html.BeginForm("SaveEmp", "Adminstrator", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "dropzone dropzone-custom needsclick add-professors dz-clickable", @id = "demo1-upload", @novalidate = "novalidate" }))
