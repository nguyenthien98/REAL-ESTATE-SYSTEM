@model RES.Data.DBModels.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Edit" asp-controller="Customer" asp-area="Admin" asp-route-id="@Model.CustomerId" method="post" enctype="multipart/form-data" class="form-horizontal">
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="AccountId" />
            <input type="hidden" asp-for="AvatarUrl" />
            <input type="hidden" asp-for="ModifiedDate" />
            <input type="hidden" asp-for="Email" />
            <div class="card-header">
                <strong>Chỉnh sửa </strong> thông tin cá nhân
            </div>
            <div class="card-body card-block">

                <div class="row form-group">
                    <div class="col col-md-3"><label class=" form-control-label">Email</label></div>
                    <div class="col-12 col-md-9">
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Họ và tên đệm</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="LastName" placeholder="Nhập họ và tên đệm" class="form-control" required>
                        <span asp-validation-for="LastName" class="form-text text-muted text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Tên</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="Firstname" placeholder="Nhập tên" class="form-control" required>
                        <span asp-validation-for="Firstname" class="form-text text-muted text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Địa chỉ</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="Address" placeholder="Nhập địa chỉ" class="form-control" required>
                        <span asp-validation-for="Address" class="form-text text-muted text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Số điện thoại</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="text-input" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" class="form-control" required>
                        <span asp-validation-for="PhoneNumber" class="form-text text-muted text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="file-input" class=" form-control-label">Ảnh đại diện</label></div>
                    <div class="col-12 col-md-9"><input type="file" id="file-input" name="file" accept="image/*" class="form-control-file"></div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
