@page
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Tên</label>
                <input asp-for="Input.Firstname" class="form-control" />
            </div>
            <div class="form-group">
                <label>Họ và tên đệm</label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input asp-for="Input.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label for="file-input" class=" form-control-label">Ảnh đại diện</label>
                <input type="file" id="file-input" name="file" accept="image/*" class="form-control-file">
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <img src="~/images/avatars/@Model.Input.AvatarUrl" alt="avatar" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
